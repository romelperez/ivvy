{
  "name": "ivvy",
  "version": "1.5.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Svelte form manager with dynamic type safe validators and i18n/l10n support.",
  "keywords": [
    "typescript",
    "svelte",
    "sveltekit",
    "form-validation",
    "form-management",
    "l10n",
    "i18n"
  ],
  "homepage": "https://github.com/romelperez/ivvy",
  "repository": {
    "type": "git",
    "url": "https://github.com/romelperez/ivvy.git"
  },
  "funding": "https://github.com/sponsors/romelperez",
  "license": "MIT",
  "type": "module",
  "files": [
    "build"
  ],
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js"
    }
  },
  "types": "./build/esm/index.d.ts",
  "module": "./build/esm/index.js",
  "main": "./build/cjs/index.js",
  "peerDependencies": {
    "svelte": "4",
    "ukti": "4",
    "yrel": "2"
  },
  "devDependencies": {
    "@playwright/experimental-ct-svelte": "^1.42.1",
    "@playwright/test": "^1.42.1",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "eslint-config-love": "^43.1.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "svelte": "^4.2.12",
    "typescript": "5.2",
    "ukti": "^4.1.1",
    "vitest": "^1.4.0",
    "yrel": "^2.1.6"
  },
  "scripts": {
    "prepare": "husky install && playwright install --with-deps",
    "clean": "rm -rf ./build && rm -f ./.tsbuildinfo && rm -rf ./playwright/.cache",
    "build": "npm run build-esm && npm run build-cjs",
    "build-esm": "sh ./scripts/build-esm.sh",
    "build-cjs": "sh ./scripts/build-cjs.sh",
    "dev": "sh ./scripts/build-esm.sh --watch",
    "format-check": "prettier . --check",
    "format": "prettier . --write",
    "lint": "eslint ./src/**/*.ts",
    "lint-fix": "eslint ./src/**/*.ts --fix",
    "test-types": "vitest --typecheck",
    "test-unit": "vitest",
    "test-e2e": "playwright test",
    "test": "npm run clean && npm run build && npm run format-check && npm run lint && npm run test-types -- --run && npm run test-unit -- --run && npm run test-e2e",
    "prepublishOnly": "npm run test"
  }
}
