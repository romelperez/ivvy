{
  "name": "ivvy",
  "version": "1.2.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "",
  "keywords": [],
  "homepage": "https://github.com/romelperez/ivvy",
  "repository": {
    "type": "git",
    "url": "https://github.com/romelperez/ivvy.git"
  },
  "funding": "https://github.com/sponsors/romelperez",
  "license": "MIT",
  "type": "module",
  "files": [
    "build"
  ],
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js"
    }
  },
  "types": "./build/esm/index.d.ts",
  "module": "./build/esm/index.js",
  "main": "./build/cjs/index.js",
  "unpkg": "./build/umd/ivvy.umd.cjs",
  "peerDependencies": {
    "lodash": "4",
    "svelte": "4",
    "ukti": "1",
    "yrel": "2"
  },
  "devDependencies": {
    "@build-script/typescript-transformer-append-js-extension": "^1.0.9",
    "@playwright/experimental-ct-svelte": "^1.38.1",
    "@playwright/test": "^1.38.1",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.7.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lodash": "^4.17.21",
    "svelte": "^4.2.1",
    "ttypescript": "^1.5.15",
    "typescript": "4.9",
    "ukti": "^1.0.1",
    "vite": "^4.4.9",
    "vitest": "^0.34.4",
    "yrel": "^2.1.2"
  },
  "scripts": {
    "prepare": "husky install && playwright install --with-deps",
    "clean": "rm -rf ./build && rm -f ./.tsbuildinfo && rm -rf ./playwright/.cache",
    "build": "npm run build-esm && npm run build-cjs && npm run build-umd",
    "build-esm": "sh ./scripts/build-esm.sh",
    "build-cjs": "sh ./scripts/build-cjs.sh",
    "build-umd": "vite build",
    "dev": "sh ./scripts/build-esm.sh --watch",
    "lint": "eslint ./src/**/*.ts",
    "lint-fix": "eslint ./src/**/*.ts --fix",
    "test-types": "vitest typecheck",
    "test-unit": "vitest",
    "test-e2e": "playwright test",
    "test": "npm run clean && npm run build && npm run lint && npm run test-types && npm run test-unit -- --run && npm run test-e2e",
    "prepublishOnly": "npm run test"
  }
}
